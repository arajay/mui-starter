{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src/",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}